<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="w-full">
    <%= f.label :password, "New password", class: "font-medium" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full py-1 px-3 border border-pink-100 focus:border-pink-500 outline-none rounded-md" %>
  </div>

  <div class="w-full">
    <%= f.label :password_confirmation, "Confirm new password", class: "font-medium" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full py-1 px-3 border border-pink-100 focus:border-pink-500 outline-none rounded-md" %>
  </div>

  <div class="w-full mt-6">
    <%= f.submit "Change my password", class: "btn w-full bg-pink-500 hover:bg-pink-400 text-pink-100 transition duration-300 cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
